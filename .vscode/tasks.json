{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build '${workspaceFolder}/build' --config Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the project using CMake."
        },
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake -S '${workspaceFolder}' -B '${workspaceFolder}/build' -DCMAKE_BUILD_TYPE=Debug",
            "detail": "Configure the project using CMake."
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf '${workspaceFolder}/build'",
            "detail": "Clean the build directory."
        }
    ]
}